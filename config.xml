<?xml version='1.0' encoding='utf-8'?>
<widget id="one.ksh.busan" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BusanApp</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
        <splash src="res/screen/splash.jpg" density="land-hdpi" />
        <splash src="res/screen/splash.jpg" density="land-ldpi" />
        <splash src="res/screen/splash.jpg" density="land-mdpi" />
        <splash src="res/screen/splash.jpg" density="land-xhdpi" />
        <splash src="res/screen/splash.jpg" density="land-xxhdpi" />
        <splash src="res/screen/splash.jpg" density="land-xxxhdpi" />

        <splash src="res/screen/splash.jpg" density="port-hdpi" />
        <splash src="res/screen/splash.jpg" density="port-ldpi" />
        <splash src="res/screen/splash.jpg" density="port-mdpi" />
        <splash src="res/screen/splash.jpg" density="port-xhdpi" />
        <splash src="res/screen/splash.jpg" density="port-xxhdpi" />
        <splash src="res/screen/splash.jpg" density="port-xxxhdpi" />
    </platform>

    <platform name="ios">
        <splash src="res/screen/splash.jpg" />
    </platform>

    <platform name="windows">
        <splash src="res/screen/splash.jpg" target="SplashScreen"/>
        <splash src="res/screen/splash.jpg" target="SplashScreenPhone"/>
    </platform>


    <preference name="SplashScreenDelay" value="3000" />
</widget>
